{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Example schema",
  "description": "Generic description of what this schema describes.",
  "type": "object",
  "category": "content",
  "status": "public",
  "format": "grid",
  "properties": {
    "name": {
      "type": "string",
      "readonly": true,
      "enum": ["test_component"],
      "options": {
        "hidden": true
      }
    },
    "string": {
      "type": "string",
      "title": "String type",
      "description": "Valid input is a plain string."
    },
    "string_with_default": {
      "type": "string",
      "title": "String type with default",
      "description": "Valid input is a plain string, default is set.",
      "default": "This is the default"
    },
    "string_with_single_enum": {
      "type": "string",
      "title": "String type with 1 enum",
      "description": "Input is validated against the values in the enum.",
      "enum": ["a"]
    },
    "string_with_multiple_enum": {
      "type": "string",
      "title": "String type with many enums",
      "description": "Input is validated against the values in the enum.",
      "enum": ["a", "b"]
    },
    "string_hidden": {
      "type": "string",
      "title": "String type, hidden from UI",
      "description": "Valid input is a plain string.",
      "options": {
        "hidden": true
      }
    },
    "string_readonly": {
      "type": "string",
      "title": "String type, read-only",
      "description": "Valid input is a plain string.",
      "readonly": true,
      "default": ""
    },
    "boolean": {
      "type": "boolean"
    },
    "integer": {
      "type": "number"
    },
    "integer_with_enum": {
      "type": "number",
      "enum": [1, 2]
    },
    "number": {
      "type": "number"
    },
    "number_with_enum": {
      "type": "number",
      "enum": [1.5, 2.5]
    },
    "text": {
      "type": "string"
    },
    "text_area": {
      "type": "string",
      "format": "html"
    },
    "object_with_subitems": {
      "type": "object",
      "properties": {
        "foo": {
          "type": "string"
        },
        "bar": {
          "type": "number"
        },
        "baz": {
          "type": "boolean"
        }
      }
    },
    "array_of_strings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "array_of_numbers": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "array_with_object_items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "foo": {
            "type": "string"
          },
          "bar": {
            "type": "number"
          },
          "baz": {
            "type": "boolean"
          }
        }
      }
    },
    "array_with_tuple_items": {
      "type": "array",
      "items": [
        {
          "type": "string"
        },
        {
          "type": "number"
        },
        {
          "type": "boolean"
        }
      ]
    },
    "array_with_oneOf": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "number"
          }
        ]
      }
    },
    "array_with_anyOf": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "number"
          }
        ]
      }
    },
    "array_with_allOf": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "number"
          }
        ]
      }
    }
  },
  "required": ["name"],
  "additionalProperties": false
}
